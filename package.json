{
  "name": "infinite-scroll-blocker",
  "version": "1.0.0",
  "private": true,
  "description": "SNS の無限スクロールをブロックする Chrome 拡張機能",
  "type": "module",
  "scripts": {
    "generate-icons": "node scripts/generate-icons.mjs",
    "predev": "npm run generate-icons",
    "dev": "vite build --watch --mode development",
    "prebuild": "npm run generate-icons",
    "build": "vite build",
    "postbuild": "VERSION=$(node -p \"require('./package.json').version\") && cd dist && zip -r \"../../x-scroll-blocker-v${VERSION}.zip\" .",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,json}\"",
    "check": "npm run lint && npm run format:check",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.304",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.4.0",
    "sharp": "^0.34.5",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vite-plugin-web-extension": "^4.5.0",
    "vitest": "^3.0.0"
  }
}
