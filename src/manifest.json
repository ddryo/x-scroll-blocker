{
  "manifest_version": 3,
  "name": "X Scroll Blocker",
  "version": "0.2.0",
  "description": "X (Twitter) の無限スクロールをブロックします。一定のスクロールを検知したらアラートダイアログを表示します。",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background/index.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["content/index.ts"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Infinite Scroll Blocker",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }
}
